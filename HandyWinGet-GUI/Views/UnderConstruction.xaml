<UserControl x:Class="HandyWinget_GUI.Views.UnderConstruction"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <hc:TransitioningContentControl>
        <StackPanel Margin="32">
            <hc:GifImage Width="400" Height="300">
                <hc:GifImage.Source>
                    <BitmapImage UriSource="/HandyWinget_GUI;component/Resources/Img/under_construction.gif"/>
                </hc:GifImage.Source>
            </hc:GifImage>
            <TextBlock Margin="0,16,0,0" HorizontalAlignment="Center" Text="{hc:Localization ComingSoon}" Style="{StaticResource TextBlockLargeBold}"/>
        </StackPanel>
    </hc:TransitioningContentControl>
</UserControl>
